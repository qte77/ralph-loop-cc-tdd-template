{
  "env": {
    "ANTHROPIC_MODEL": "opus",
    "CLAUDE_CODE_DISABLE_NONESSENTIAL_TRAFFIC": "1",
    "CLAUDE_CODE_IDE_SKIP_AUTO_INSTALL": "1",
    "CLAUDE_CODE_SUBAGENT_MODEL": "opusplan",
    "DISABLE_NON_ESSENTIAL_MODEL_CALLS": "1",
    "OTEL_EXPORTER_OTLP_METRICS_PROTOCOL": "",
    "OTEL_EXPORTER_OTLP_PROTOCOL": "",
    "OTEL_LOGS_EXPORTER": ""
  },
  
  "permissions": {
    "allow": [
      "Bash(date:*)",
      "Bash(git add:*)",
      "Bash(git:diff:*)",
      "Bash(git:log:*)",
      "Bash(git:status:*)",
      "Bash(git log --grep:*)",
      "Bash(jq:*)",
      "Bash(make:*)",
      "Bash(tree:*)",
      "Bash(uv sync:*)",
      "Bash(uv run mypy:*)",
      "Bash(uv run pytest:*)",
      "Bash(uv run ruff:*)",
      "Edit(AGENT_LEARNINGS.md)",
      "Edit(AGENT_REQUESTS.md)",
      "Edit(docs/**/*.md)",
      "Edit(ralph/docs/*.json)",
      "Edit(ralph/docs/*.txt)",
      "Edit(src/**/*.py)",
      "Edit(src/**/*.json)",
      "Edit(tests/**/*.py)",
      "Edit(tests/**/*.json)",
      "mcp__plugin_context7_context7__resolve-library-id",
      "mcp__plugin_context7_context7__query-docs",
      "Read(.claude/skills/**/*.md)",
      "SlashCommand",
      "Skill"
    ],
    "deny": [
      "Bash(awk:*)",
      "Bash(cat:*)",
      "Bash(find:*)",
      "Bash(git push:*)",
      "Bash(grep:*)",
      "Bash(head:*)",
      "Bash(ls:*)",
      "Bash(source:*)",
      "Bash(tail:*)",
      "Bash(touch:*)"
    ],
    "ask": [
      "Bash(bash:ralph/scripts/*.sh:*)",
      "Bash(chmod:+x:ralph/scripts/*.sh)",
      "Bash(git commit:*)",
      "Bash(mv:*)",
      "Bash(mkdir:*)",
      "Bash(rm:*)",
      "Edit(.claude/**)",
      "Edit(AGENTS.md)",
      "Edit(CLAUDE.md)",
      "Edit(CONTRIBUTING.md)",
      "Edit(Makefile)",
      "Edit(pyproject.toml)",
      "Edit(README.md)"
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "bash .claude/scripts/statusline.sh"
  },
  "enabledPlugins": {
    "code-review@claude-plugins-official": true,
    "code-simplifier@claude-plugins-official": true,
    "context7@claude-plugins-official": true,
    "security-guidance@claude-plugins-official": true
  },
  "attribution": {
    "commit": "Co-Authored-By: Claude <noreply@anthropic.com>"
  }
}
